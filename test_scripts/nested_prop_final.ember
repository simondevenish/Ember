// Final test for nested property assignment using step-by-step approach
var obj = {}; // Empty object first

// Set up the properties step by step
obj.basic = "value";

// Set up deep property step by step
obj.deep = {};
obj.deep.inner = {};
obj.deep.inner.prop = "original";

// Set up array-like
obj.array_like = {};
obj.array_like.item0 = "zero";
obj.array_like.item1 = "one"; 

// Test basic properties first
print("obj.basic = " + obj.basic);

// Test nested property access
print("obj.deep.inner.prop = " + obj.deep.inner.prop);

// Test normal nested assignment (this uses SET_NESTED_PROPERTY)
obj.deep.inner.prop = "updated value";
print("After update: obj.deep.inner.prop = " + obj.deep.inner.prop);

// Test deeper nesting
obj.deep.inner.more = {};
obj.deep.inner.more.nested = "even deeper";
print("obj.deep.inner.more.nested = " + obj.deep.inner.more.nested);

// Test additional properties
print("obj.array_like.item0 = " + obj.array_like.item0);
obj.array_like.item1 = "updated one";
print("Updated: obj.array_like.item1 = " + obj.array_like.item1); 